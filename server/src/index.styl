
body
  width (25px + 4) * 32
  background #333

.led
  width 25px
  height 25px
  float left
  background-color: #000;  
  box-shadow: inset 0px 1px 0px 0px rgba(250,250,250,0.5), 0px 0px 3px 2px rgba(000,0,0,0.5);
  border: 0;  
  border-radius: 35px
  margin 2px

  &.red
    background #f00
    box-shadow: inset 0px 1px 0px 0px rgba(250,250,250,0.5), 0px 0px 3px 2px rgba(220,0,0,0.5);

  &.green
    background #0f0
    box-shadow: inset 0px 1px 0px 0px rgba(250,250,250,0.5), 0px 0px 3px 2px rgba(0,220,0,0.5);
  
  &.orange
    background #ff0
    box-shadow: inset 0px 1px 0px 0px rgba(250,250,250,0.5), 0px 0px 3px 2px rgba(220,220,0,0.5);

#code
  background #ffffff66
  clear both
  padding 10px 5px
  border-radius 5px
  margin-top 50px
  font-family: monospace
